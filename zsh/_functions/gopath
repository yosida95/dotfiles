gopath() {
    if [ -d "$1" ]; then
        export GOPATH=$1
    else
        export GOPATH=`pwd`
    fi
    export GOBIN=$GOPATH/bin

    if [ -n "$_ORIG_PATH" ]; then
        export PATH=$GOBIN:$_ORIG_PATH
    else
        export _ORIG_PATH=$PATH
        export PATH=$GOBIN:$PATH
    fi
}

# vim: set filetype=zsh:
