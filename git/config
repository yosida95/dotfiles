# vim: set filetype=gitconfig shiftwidth=0 noexpandtab:

[init]
	defaultBranch = main
[core]
	whitespace = trailing-space,space-before-tab,cr-at-eol
[alias]
	pr-setup = config --add remote.origin.fetch +refs/pull/*/head:refs/remotes/origin/pr/*
[color]
	ui = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[grep]
	lineNumber = true
[push]
	default = simple
	followTags = true
	autoSetupRemote = true
[user]
	useConfigOnly = true
	name = Kohei YOSHIDA
	email = kohei@yosida95.com
[pull]
	ff = only
[format]
	pretty = fuller
[fetch]
	prune = true
[advice]
	detachedHead = false
[ghq]
	root = ~/proj/src
[includeIf "gitdir:~/proj/src/github.com/GehirnInc/"]
	path = ~/.config/git/config.gehirninc
[commit]
	verbose = true
[url "ssh://git@github.com/"]
	insteadOf = "git://github.com/"
	pushInsteadOf = "https://github.com/"
[log]
	date = iso
[tag]
	sort = version:refname
[status]
	submoduleSummary = true
[diff]
	submodule = log
[credential "https://github.com"]
	helper =
	helper = !gh auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !gh auth git-credential
